extends layout

block content
    h1=title
    -
        let results = [{"DrinkName": "Coke", "DrinkSize": "Large", "DrinkCost": 14,},{"DrinkName": "Sprite","DrinkSize": "Medium","DrinkCost": 18,},{"DrinkName": "Water","DrinkSize": "small","DrinkCost": 8,}]

    div(class= "container-fluid")
        div(class = "row")  
            each item, index in results
                div(class= "col-sm-2", onclick=`drink(${index})`) DrinkName : &nbsp; #{item.DrinkName}
                div(class= "col-sm-2", onclick=`drink(${index})`) DrinkSize : &nbsp; #{item.DrinkSize}
                div(class= "col-sm-2", onclick=`drink(${index})`) DrinkCost : &nbsp; #{item.DrinkCost}


    script.
        function drink(itemNum){
        alert(`You purchased item ${itemNum+1}`)
        }